<!-- 新老引擎的分发通过miniVersion来判定 -->
<root miniVersion="1.0">
    <inputGroup duration="0.3" order="1">
        <transition timestamp="0.00" duration="0.3" repeat="1" order="2">
            <action begin="0.000" end="0.3" name="transition" fShader="black.glsl">
                <animation begin="0.0" end="0.13">
                    <param_begin param1="1.0" param2="0.0" param3="0.0"/>
                    <param_end   param1="0.0" param2="0.0" param3="0.0"/>
                </animation>
                <animation begin="0.13" end="0.17">
                    <param_begin param1="0.0" param2="1.0" param3="0.0"/>
                    <param_end   param1="0.0" param2="1.0" param3="0.0"/>
                </animation>
                <animation begin="0.17" end="0.30">
                    <param_begin param1="0.0" param2="2.0" param3="0.0"/>
                    <param_end   param1="0.0" param2="2.0" param3="1.0"/>
                </animation>
            </action>
        </transition>
    </inputGroup>
</root>
